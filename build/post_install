#!/bin/bash
set -xe
cd /root/build
yum -y localinstall \
    epel-release-latest-7.noarch.rpm \
    pgdg-centos10-el7.noarch.rpm
/bin/rm -f *.rpm
install -o root -g root -m 644 oss-3rdparty.repo /etc/yum.repos.d/

# Create "firstuser" unpriv shell account
groupadd -g 500 firstuser
# $ echo firstuser1234 | openssl passwd -stdin -1
useradd -u 500 -g 500 -d /home/firstuser -s /bin/bash -p '$1$xgBMWsf3$rae38nIFO3G1TacXTT2cr.' firstuser
# Lock root account
usermod -L root

# Latest centos updates
yum clean all
yum -y update

# Add basic required packages plus runit
yum -y install nc openssh-clients openssl sudo unzip zip wget which runit

chmod 640 /etc/sudoers
echo "%wheel    ALL=(ALL)       ALL" >> /etc/sudoers
echo "firstuser ALL=(ALL)       ALL" >> /etc/sudoers
# Make sure root can run app_start without a tty or password
sed -i -e 's/^Defaults.*requiretty/Defaults !requiretty/' /etc/sudoers
egrep -i '.*tty' /etc/sudoers
chmod 440 /etc/sudoers

cd /root/build
yum -y clean all
rm -rf /var/cache/yum
